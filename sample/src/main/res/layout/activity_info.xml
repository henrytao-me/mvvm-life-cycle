<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  tools:context=".activity.InfoActivity">

  <android.support.v7.widget.Toolbar
    android:id="@+id/toolbar"
    app:navigationIcon="@drawable/ic_toolbar_arrow_back"
    style="@style/AppStyle.MdToolbar" />

  <ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_below="@+id/toolbar">

    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="vertical"
      android:gravity="center"
      android:paddingBottom="@dimen/mdLayoutSpacing"
      android:paddingLeft="@dimen/mdLayoutSpacing"
      android:paddingRight="@dimen/mdLayoutSpacing"
      android:paddingTop="@dimen/mdLayoutSpacing">

      <TextView
        android:layout_marginBottom="@dimen/mdLayoutSpacing_sm"
        android:text="@string/app_code"
        style="@style/MdText.Headline" />

      <TextView
        android:layout_marginBottom="@dimen/mdLayoutSpacing_sm"
        android:gravity="center"
        android:text="@string/app_description"
        style="@style/MdText.Body1" />

      <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/mdLayoutSpacing" />

      <ImageView
        android:layout_width="@dimen/mdIconSize_xxlg"
        android:layout_height="@dimen/mdIconSize_xxlg"
        android:layout_marginBottom="@dimen/mdLayoutSpacing"
        android:src="@drawable/ic_logo" />

      <TextView
        android:layout_marginBottom="@dimen/mdLayoutSpacing_sm"
        android:gravity="center"
        android:text="@string/app_copyright"
        style="@style/MdText.Body1" />

      <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/mdLayoutSpacing_lg" />

      <TextView
        android:layout_marginBottom="@dimen/mdLayoutSpacing_sm"
        android:gravity="center"
        android:text="@string/text_fork"
        style="@style/MdText.Body1" />

      <TextView
        android:layout_marginBottom="@dimen/mdLayoutSpacing_sm"
        android:autoLink="web"
        android:gravity="center"
        android:text="@string/app_repo"
        style="@style/MdText.Body1" />

      <View
        android:layout_marginBottom="@dimen/mdLayoutSpacing_sm"
        style="@style/MdDivider" />

      <TextView
        android:layout_marginBottom="@dimen/mdLayoutSpacing_sm"
        android:text="@string/text_license"
        style="@style/MdText.Headline" />

      <TextView
        android:layout_marginBottom="@dimen/mdLayoutSpacing_sm"
        android:text="@string/app_license"
        style="@style/MdText.Body1" />
    </LinearLayout>
  </ScrollView>
</RelativeLayout>
