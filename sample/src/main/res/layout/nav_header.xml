<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="192dp"
  android:orientation="vertical"
  android:background="?attr/mdColor_primaryPalette"
  android:gravity="center"
  android:padding="@dimen/mdLayoutSpacing">

  <ImageView
    android:layout_width="wrap_content"
    android:layout_height="100dp"
    android:layout_gravity="center"
    android:src="@drawable/logo" />

  <TextView
    android:layout_gravity="bottom|center_horizontal"
    android:text="@string/navigation_view_header_title"
    android:textColor="?attr/mdTextColorPrimary_primaryPalette_dark"
    style="@style/MdText.Body1.SingleLine" />
</FrameLayout>